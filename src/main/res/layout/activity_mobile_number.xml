<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rohithreddy.hkwikmint.MobileNumber">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#757575">

        <Button
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/ro4b"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/back" />


        <TextView
            android:id="@+id/ro4b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Enter Mobile Number to Pay"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/back" />

        <EditText
            android:id="@+id/number"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ro4b"
            android:layout_below="@+id/ro4b"
            android:layout_marginTop="30dp"
            android:focusable="true"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="24sp" />
        <Button
            android:id="@+id/submit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:text="Proceed"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="170dp"
            android:layout_below="@+id/number"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</RelativeLayout>
