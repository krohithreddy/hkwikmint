<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"

            android:drawableTint="#FF4081"
            android:dropDownHeight="wrap_content"
            android:dropDownWidth="match_parent"
            android:fontFamily="serif"
            android:hint=" Search For Route   "
            android:maxLines="2"
            android:textColor="#d67601"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/r_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected Route"

            android:textSize="20dp"
            android:layout_below="@+id/route"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60dp" />




        <Button
            android:id="@+id/ro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="    Feedback       "
            android:layout_below="@+id/su"
            android:textColor="#fff"
            android:background="@drawable/mybutton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/su"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:text="    Play Video    "
            android:layout_below="@+id/r_id"
            android:background="@drawable/mybutton"
            android:layout_alignEnd="@+id/ro"
            android:layout_marginTop="40dp" />



        <Button
            android:id="@+id/sr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:elevation="0dp"
            android:text="   SUBMIT REPORT   "
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_weight="4.93"
            android:layout_marginTop="59dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/ro"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>
</ScrollView>